<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke">
    <test name="Critical Functionalities">
        <classes>
            <class name="test_scripts.TechGlo_InvalidLoginCredentials">
                <methods>
                    <include name="validateInvalidLogin_WrongUserName"/>
                    <include name="validateInvalidLoginWrongPassword"/>
                    <include name="validateBothWrongCredentials"/>
                </methods></class>

            <class name="test_scripts.TechGlo_LoginFormCardValidation">
                <methods>
                    <include name="loginFormCardValidation"/>
                </methods>
            </class>
            <class name="test_scripts.TechGlo_LoginFormCard_ValidLogin">
                <methods>
                    <include name="loginFormValidLogin"/>
                    <include name="loginFormValidLoginAndLogOut"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>